local PlayerGui = game.Players.LocalPlayer:FindFirstChild("PlayerGui") or game.Players.LocalPlayer:WaitForChild("PlayerGui")

local blur = Instance.new("BlurEffect")
blur.Size = 0 
blur.Parent = game.Lighting
blur.Enabled = true

local screenGui = Instance.new("ScreenGui")
screenGui.IgnoreGuiInset = true
screenGui.Parent = PlayerGui

local mainText = Instance.new("TextLabel")
mainText.Size = UDim2.new(0.6, 0, 0.2, 0)
mainText.Position = UDim2.new(0.5, -mainText.Size.X.Offset / 2, 0.4, 0)
mainText.AnchorPoint = Vector2.new(0.5, 0.5)
mainText.BackgroundTransparency = 1
mainText.Text = "VEXX PRIV"
mainText.TextSize = 50
mainText.TextColor3 = Color3.fromRGB(255, 255, 255)
mainText.Font = Enum.Font.SourceSansBold
mainText.TextTransparency = 1
mainText.Parent = screenGui

local gameName = Instance.new("TextLabel")
gameName.Size = UDim2.new(0.6, 0, 0.2, 0)
gameName.Position = UDim2.new(0.5, -gameName.Size.X.Offset / 2, 0.6, 0)
gameName.AnchorPoint = Vector2.new(0.5, 0.5)
gameName.BackgroundTransparency = 1
gameName.Text = ""
gameName.TextSize = 30
gameName.TextColor3 = Color3.fromRGB(255, 255, 255)
gameName.Font = Enum.Font.SourceSans
gameName.TextTransparency = 1
gameName.Parent = screenGui

local gameNames = {
    [75159825516372] = "Track Aim Trainer",
}

local gameId = game.PlaceId
local currentGameName = gameNames[gameId] or "Unsupported Game"
gameName.Text = currentGameName

local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")

local player = Players.LocalPlayer
local mouse = player:GetMouse()
local camera = workspace.CurrentCamera

local camlock = false
local trigger = false
local aimTarget = nil
local smoothness = 0.02
local cooldown = 0.1
local lastShot = 0

UIS.InputBegan:Connect(function(input, gpe)
	if not gpe then
		if input.KeyCode == Enum.KeyCode.C then
			camlock = not camlock
			if camlock then
				local bot = workspace:FindFirstChild("Bots")
				if bot and bot:FindFirstChild("Dummy") and bot.Dummy:FindFirstChild("HumanoidRootPart") then
					aimTarget = bot.Dummy.HumanoidRootPart
				end
			else
				aimTarget = nil
			end
		elseif input.KeyCode == Enum.KeyCode.Q then
			trigger = not trigger
		end
	end
end)

RunService.RenderStepped:Connect(function()
	if camlock and aimTarget then
		local cf = CFrame.new(camera.CFrame.Position, aimTarget.Position)
		camera.CFrame = camera.CFrame:Lerp(cf, smoothness)
	end
	if trigger and (tick() - lastShot >= cooldown) then
		local target = mouse.Target
		if target and target:FindFirstAncestor("Bots") and target:FindFirstAncestor("Dummy") then
			local tool = player.Character and player.Character:FindFirstChildOfClass("Tool")
			if tool and tool:FindFirstChild("Handle") then
				tool:Activate()
				lastShot = tick()
			end
		end
	end
end)
